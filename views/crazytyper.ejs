<!DOCTYPE html>
<html ng-app="crazyTyper">
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" href="/stylesheets/pages/crazy_typer.css">
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js"></script>
    <script src="/js/pages/crazy_typer.js"></script>
  </head>
  <body ng-controller="CrazyController" ng-keypress="crazyFunction($event)">
      <div class="wrapper">
        <h1>Crazy Typer</h1>
        <p>
          <span ng-repeat="letter in crazy_text track by $index"
          style="
          font-size: {{ letter.size }};
          color: {{ letter.color }};
          margin: {{ letter.margin }};
          ">
            {{ letter.character }}
          </span>
        </p>
      </div>
  </body>
</html>
