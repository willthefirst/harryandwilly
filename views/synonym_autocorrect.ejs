<!DOCTYPE html>
<html ng-app="synonymAutocorrect">
  <head>
    <meta charset="utf-8">
    <title>Synonym Autocorrect</title>
    <link rel="stylesheet" href="/stylesheets/pages/synonym_autocorrect.css" media="screen" charset="utf-8">
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js"></script>
    <script src="/js/pages/synonym_autocorrect.js"></script>
  </head>
  <body>
    <div class="wrapper">
      <h1>Synonym Autocorrect</h1>
      <div ng-controller="Replacer">
        <p>
          <span ng-repeat="word_object in words track by $index">
            {{ word_object.replacedWord || word_object.initialWord }}
          </span>
          <input class="input-replace" type="text" name="initial" placeholder="Start typing..." ng-model="initial" ng-keypress="replaceWord($event)">
        </p>
      </div>
    </div>
  </body>
</html>
